<div>
    <div class="row-fluid">
        <div class="span6">
            <h2><%= t('healthcats.shared.title') %></h2>
        </div>
        <div class="cats_tabs span6">
            <ul class="nav nav-pills pull-right">
                <%= content_tag :li, :class => ('active' if params[:controller] == "healthcats" && params[:action] == "index") do %>
                    <%= link_to t('healthcats.shared.categories'), healthcats_path %>
                <% end %>
                <%= content_tag :li, :class => ('active' if params[:controller] == "articles" && params[:action] == "health") do %>
                    <%= link_to t('healthcats.shared.abc'), health_articles_path %>
                <% end %>
                <%= content_tag :li, :class => ('active' if params[:controller] == "tags" && params[:action] == "index") do %>
                    <%= link_to t('healthcats.shared.tags') %>
                <% end %>
            </ul>
        </div>
    </div>
</div>
