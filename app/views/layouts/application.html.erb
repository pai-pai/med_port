<!DOCTYPE html>
<html>
    <head>
        <title><%= t('shared.title') %>
            <% if content_for?(:title) %>
                 | <%= yield :title %>
            <% end %>
        </title>
        <%= stylesheet_link_tag "application", :media => "all" %>
        <%= javascript_include_tag "application" %>
        <%= csrf_meta_tags %>
    </head>
    <body>
        <%= render 'shared/top_nav' %>
        <%= content_for?(:head) ? yeld(:head) : (render "shared/header") %>
        <%= yield %>
    </body>
</html>
