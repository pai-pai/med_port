<!DOCTYPE html>
<html>
    <head>
        <title><%= t('shared.title') %>
            <% if content_for?(:title) %>
                 | <%= yield :title %>
            <% end %>
        </title>
        <%= stylesheet_link_tag "application", :media => "all" %>
        <%= javascript_include_tag "application" %>
        <%= csrf_meta_tags %>
    </head>
    <body>
        <% if content_for?(:head) %>
            <%= yield :head %>
        <% else %>
            <%= render 'shared/header' %>
        <% end %>
        <%= yield %>
    </body>
</html>
