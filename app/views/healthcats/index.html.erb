<% content_for :title do %>
    <%= t('.title') %>
<% end %>

<%= render 'shared/healthcats/title_menu' %>

<div>
    <% if can? :create, :healthcat %>
        <div class="container-fluid control_panel">
            <ul class="unstyled">
                <li><%= link_to t('healthcats.shared.add_new'), new_healthcat_path %></li>
            </ul>
        </div>
    <% end %>
    <div class="container-fluid">
        <% if @healthcats.blank? %>
            <p><%= t('shared.no_info') %></p>
        <% else %>
            <% @healthcats.each_slice((@healthcats.size/4.0).ceil) do |slice| %>
                <div class="span3">
                    <ul class="unstyled">
                        <% slice.each do |cat| %>
                            <li><%= link_to cat.name, cat %></li>
                        <% end %>
                    </ul>
                </div>
            <% end %>
        <% end %>
    </div>
    <% if can? :create, :healthcat %>
        <div class="container-fluid control_panel">
            <%= link_to t('healthcats.shared.add_new'), new_healthcat_path %>
        </div>
    <% end %>
</div>
