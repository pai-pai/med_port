<%= form_for(@healthcat, :html => {:class => "form-horizontal"}) do |f| %>
    <div class="control-group">
        <%= f.label t('shared.healthcat.name'), :class => "control-label" %>
        <div class="controls">
            <%= f.text_field :name %>
        </div>
    </div>
    <div class="control-group">
        <%= f.label t('shared.healthcat.description'), :class => "control-label" %>
        <div class="controls">
            <%= f.text_area :description, :rows => 4 %>
        </div>
    </div>
    <div class="control-group">
        <%= f.label t('shared.healthcat.parent_healthcat_id'), :class => "control-label" %>
        <div class="controls">
            <%= f.collection_select :parent_healthcat_id, Healthcat.may_be_a_parent, :id, :name, :include_blank => true %>
        </div>
    </div>
    <div class="control-group">
        <%= f.label t('shared.healthcat.gender'), :class => "control-label" %>
        <div class="controls">
            <%= f.select :gender, Healthcat.genders, :include_blank => true %>
        </div>
    </div>
    <div class="control-group">
        <div class="controls">
            <%= f.submit t('shared.actions.save'), {:class => "submit_button btn"} %>
            <%= submit_tag t('shared.actions.cancel'), {:name => 'cancel_button', :class => "submit_button btn"} %>
        </div>
    </div>
<% end %>
